<!DOCTYPE html >
<html lang="en" id="result">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css"
        integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <style>
        #thugon {
            display: flex;
            flex-wrap: wrap;
        }

        @media screen and (max-width: 768px) {
            #thugon {
                display: block;
            }
        }

        .table-responsive {
            height: 100vh;
            /* Đặt chiều cao của phần tử cha */
            overflow-y: scroll;
            /* Cho phép cuộn theo chiều dọc */
        }

        .search-form {
            display: flex;
            align-items: center;
        }

        .search-input {
            border: none;
            border-radius: 5px;
            margin-right: 10px;
            flex: 1;
        }

        .search-button {
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .search-button:hover {
            background-color: #0062cc;
        }

        .collapse: {
            display: none;
        }
    </style>
</head>

<body>
    <div  class="table-responsive">
        <div style="display: flex;" class="d-flex justify-content-between">
            <button id="btn" style="margin-bottom: 10px;" class="btn btn-primary">Thêm
                user</button>
            <form action="/qluser/search" method="post" id="formsearch" class="search-form col-sm-4" style="margin:0 5px 10px 0;">
                <input id="namesearch" name="namesearch" type="text" class="search-input" placeholder="Tìm kiếm tên người dùng..." style="border: 1px solid #ccc;">
                <button type="submit" class="search-button">
                    <i class="fa fa-search"></i>
                </button>
            </form>
        </div>
        <div id="demo" style="margin-bottom: 10px;display: none;">
            <form id="form" action="/qluser/postputuser" method="post">
                <div id="thugon">
                    <input type="txtid" id="txtid" style="display: none;">
                    <div class="form-group text-center col-sm-3" style="height: 160px;">
                        <img style="width: 150px;height: 150px;"
                            src="../Image/avatar-mac-dinh-1.png" alt="avatar"
                            class="rounded-circle" id="qluserimage">
                        <input type="file" id="file-input" name="image" style="display:none" accept="image/*">
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label for="fullname">Full Name</label>
                            <input name="fullname" type="text" class="form-control" id="fullname"
                                placeholder="Enter your full name" required>
                        </div>
                        <div class="form-group">
                            <label for="email">Email address</label>
                            <input name="email" type="email" class="form-control" id="email" placeholder="Enter email"
                                required>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input name="password" type="password" class="form-control" id="password"
                                placeholder="Password" required>
                        </div>
                        <button id="submit" type="submit" class="btn btn-primary btn-block">Submit</button>
                    </div>
                </div>
            </form>
        </div>
        <table id="mytable" class="table table-hover table-fixed">
            <thead>
                <tr>
                    <th>STT</th>
                    <th scope="col" class="w-25">Image</th>
                    <th scope="col" class="w-25">Full Name</th>
                    <th scope="col" class="w-25">Email</th>
                    <th scope="col" class="w-25">Options</th>

                </tr>
            </thead>
            <tbody>
                {{#each posts}}
                <tr>
                    <td>{{inc @index}}</td>
                    <td class="w-25">       
                        <img style="width: 50px;height: 50px;border-radius: 60%;" src='/Image/{{this.image}}' alt="" srcset="">
                    </td>
                    <td class="w-25">{{this.fullname}}</td>
                    <td class="w-25">{{this.email}}</td>
                    <td style="display: none;">{{this._id}}</td>
                    <td class="w-25">
                        <i id="btndelete" class="fa-sharp fa-solid fa-trash btn-delete"></i>
                        <i id="btnupdate" class="fa-sharp fa-solid fa-pen btn-update"></i>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>




    <script>
        var passwordFields = document.querySelectorAll(".password-field");
        // Thay thế nội dung của các phần tử td này bằng chuỗi toàn ký tự '*'
        passwordFields.forEach(function (field) {
            field.innerHTML = "*".repeat(field.textContent.length);
        });
    </script>




    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.3/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/242d645205.js" crossorigin="anonymous"></script>

    <script src="../Scrip/QuanLyUser.js"></script>
</body>

</html>